<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <TextView
        android:id="@+id/tv_addtime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toLeftOf="@+id/tv_state"
        android:textColor="@color/next_color"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_confirmTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tv_addtime"
        android:layout_marginLeft="10dp"
        android:layout_toLeftOf="@+id/tv_state"
        android:textColor="@color/next_color"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_sendTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tv_confirmTime"
        android:layout_marginLeft="10dp"
        android:layout_toLeftOf="@+id/tv_state"
        android:textColor="@color/next_color"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_finishTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tv_sendTime"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_toLeftOf="@+id/tv_state"
        android:textColor="@color/next_color"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="10dp"
        android:padding="3dp"
        android:text="已完成"
        android:textColor="@color/next_color"
        android:textSize="18sp" />
    <ImageView
        android:id="@+id/img_last_time"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:scaleType="fitXY"
        android:src="@drawable/img_last_time" />

</RelativeLayout>